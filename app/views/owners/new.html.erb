<h1>New Owner</h1>
<p> <em> Ingrese los datos necesarios: </em> </p>

<% if @owner.errors.any? %>
  <div>
    Por favor corrija los siguientes problemas:
    <ul>
      <% @owner.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @owner do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name%>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email%>
  </p>

  <p>
    <%= f.label :password, "Password"%>
    <%= f.password_field :password%>
  </p>

  <p>
    <%= f.label :password_confirmation, "Ingrese la password de nuevo"%>
    <%= f.password_field :password_confirmation%>
  </p>

  <p>
    <%= f.submit "Crear"%>
    <%= link_to "Cancelar", root_path%>
  </p>

<% end %>
